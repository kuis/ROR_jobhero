- if user_signed_in?
  - content_for :navigation_links do
    %li= link_to 'Weekly', weekly_path
    %li= link_to 'Blog', '#'
    %li= link_to 'Log out', destroy_user_session_path, :method=>'delete'
    %li= link_to 'Post a Job', '#', :class => 'btn btn-success'
- else
  - content_for :navigation_links do
    %li= link_to 'Weekly', weekly_path
    %li= link_to 'Blog', '#'
    %li= link_to 'Login', new_user_session_path
    %li= link_to 'Are you Hiring?', new_user_registration_path, :class => 'btn btn-success'
%h1.text-center.bold.slogan The Best Tech Jobs in California, Period.
.container
  .row
    .job-btns.text-center
      %ul
        %li
          = link_to 'All JOBS', root_path
        %li
          = link_to 'SUPPORT', root_path(:category => 'SUPPORT')
        %li
          = link_to 'DESIGN', root_path(:category => 'DESIGN')
        %li
          = link_to 'ENGINEERING', root_path(:category => 'ENGINEERING')
        %li
          = link_to 'PRODUCT', root_path(:category => 'PRODUCT')
        %li
          = link_to 'DATA SCIENCE', root_path(:category => 'DATA SCIENCE')
      .clearfix
    .row
      .col-md-10.col-md-offset-1
        %table.table
          %tbody
            = render @tasks
        = render 'subscribe_form'
        .text-center
          = will_paginate @tasks

    /= render 'landing_pagination'

